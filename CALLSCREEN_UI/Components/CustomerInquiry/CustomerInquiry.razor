@page "/CustomerInquiry"

@using System.Net;
@using System.Reflection;
@using System.Globalization;
@using Radzen;
@using Radzen.Blazor;

<div class="container" style="text-align: center;">
    <h4>Customer Inquiry</h4>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="thaiName">Thai Name : </label>
            <RadzenTextBox id="thaiName" Placeholder="Thai Name" />
        </div>
        <div class="col-lg-6 text-right">
            <label for="thaiSurname">Thai Surname : </label>
            <RadzenTextBox id="thaiSurname" Placeholder="Thai Surname" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="engName">Eng Name : </label>
            <RadzenTextBox id="engName" Placeholder="Eng Name" />
        </div>
        <div class="col-lg-6 text-right">
            <label for="engSurnename">Eng Surname : </label>
            <RadzenTextBox id="engSurnename" Placeholder="Eng Surname" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="idNo">ID No : </label>
            <RadzenTextBox id="idNo" Placeholder="ID No" />
        </div>
        <div class="col-lg-6 text-right">
            <label for="contract">Contract No : </label>
            <RadzenTextBox id="contract" Placeholder="contract No" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="customer">Customer No : </label>
            <RadzenTextBox id="customer" Placeholder="Customer No" />
        </div>
        <div class="col-lg-6 text-right">
            <label for="card">Card No : </label>
            <RadzenTextBox id="card" Placeholder="Card No" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="telHome">Tel Home : </label>
            <RadzenTextBox id="telHome" Placeholder="Tel Home" />
        </div>
        <div class="col-lg-6 text-right">
            <label for="telOffice">Tel Office : </label>
            <RadzenTextBox id="telOffice" Placeholder="Tel Office" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="telMobile">Tel Mobile : </label>
            <RadzenTextBox id="telMobile" Placeholder="Tel Mobile" />
        </div>
        <div class="col-lg-6 text-right">
            <label for="telAll">Tel All : </label>
            <RadzenTextBox id="telAll" Placeholder="Tel All" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-6 text-right">
            <label for="email">E-Mail : </label>
            <RadzenTextBox id="email" Placeholder="E-Mail" />
        </div>
        <div class="col-lg-6">
            @*<label for="thaiSurname">Thai Surname : </label>
            <RadzenTextBox id="thaiSurname" Placeholder="Thai Surname" />*@
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <label for="page">Goto Page : </label>
            <RadzenTextBox id="page" Placeholder="Page" />
            <RadzenButton>Go</RadzenButton>
            <RadzenButton>Clear</RadzenButton>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {

    }
}
