@page "/"
@namespace CALLSCREEN_UI.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CALLSCREEN_UI</title>
    <link rel="icon" href="~/images/Logo-EasyBuy.png" />
    <base href="~/" />
    @*<link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/Radzen/css/fluent.css" />
    <link href="css/site.css" rel="stylesheet" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        setTitle = (title) => { document.title = title; };
    </script>
</head>
<body>
    <script type="text/javascript">
        if (/MSIE \d|Trident.*rv:/.test(navigator.userAgent)) {
            document.write('<script src="js/blazor.polyfill.js"><\/script>');
        }


        function removeDefaultFunction() {
            window.onhelp = function () {
                return false;
            }
        }

        $(window).bind('keydown', function (e) {

            if (e.key.length > 1 && e.key.length <= 3) {
                removeDefaultFunction();
                e.cancelable = true;
                e.stopPropagation();
                e.preventDefault();
                e.returnValue = false;
            }
        });
    </script>
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>
